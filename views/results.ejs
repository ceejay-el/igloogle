<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/cead0ad813.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link rel="stylesheet" href="/styles.css">
    <title> igloogle </title>
</head>

<body class="results-home">

    <section id="results-header">
        <div class="container">
            <!-- search textbox -->
            <div class="results-searchbox">
                <!-- Search form -->
                <form action="/serp" method="post" id="results-search-form" class="form-inline d-flex justify-content-center md-form form-sm mt-1" autocomplete="off">
                    <p id="results-logo"> igloogle </p>
                    <input id="text-input" class="form-control form-control-sm mr-0 w-75" type="text" placeholder="Search the Web" aria-label="Search" name="search">
                    <button value="Search" class="btn btn-primary search-btn"> <i class="fas fa-search fa-2x" aria-hidden="true"></i> </button>
                </form>
            </div>
        </div>
    </section>
                <% if(SEresults) {                                                      %>
    <section class="count">
        <div class="container d-flex">
            <p class="mr-2"> About <%= SEresults.search_information.total_results %> results </p>
            <p> ( <%= SEresults.request.total_time_taken %> seconds ) </p>
        </div>
    </section>

    <section id="results">
        <div class="container">
            <div class="row">
                <div class="col-md-6">

                <%        SEresults.organic_results.forEach(function(index){            %>
                            <div class="previews card card-body">
                                <h4 class="previews-title"> <a href=" <%=index.url%> "> <%= index.title %> </a> </h4>
                                <p class="link"> <%= index.url %> </p>
                                <p class="preview"> <%= index.snippet %> </p>
                            </div>
                <%        });                                                            %>

                </div>
            </div>
        </div>
    </section>

    <footer class="text-white">
        <div class="container">
            <p> - It ain't much, but it's honest work </p>
        </div>
    </footer>
                <% }                                                                     %>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="index.js"></script>
</body>
</html>
